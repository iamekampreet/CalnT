<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Tasks</h1>
    <% if(tasks.length === 0) { %>
    <h2>Empty tasks list, add a task first</h2>
    <% } else { tasks.forEach((taskGroup) => { %>
    <h2><%= taskGroup.heading %></h2>
    <h3><%= taskGroup.description %></h3>
    <div>
      <% taskGroup.tasks.forEach( (task) => { %>
      <h4><%= task.taskName %></h4>
      <% if (task.completed){ %> completed <% } else { %> incomplete <% } } ) %>
    </div>
    <% }) } %>
  </body>
</html>
